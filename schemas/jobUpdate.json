{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "salary": {
      "type": "integer",
      "minimum": 0
    },
    "equity": {
      "type": "string",
      "pattern": "0|(0?\\.[0-9]+)"
    }
  },
  "required": ["title"],

  "additionalProperties": false
}
